@model WebsiteShopCaCanh.Models.HomeModel

@{
    ViewBag.Title = "Home Page";
} 

<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">
                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <h6>DANH MỤC</h6>
                        <nav class="nav-home-aside">
                            <ul class="menu-category">
                                @foreach (var item in Model.ListCategory)
                                {
                                <li>
                                @Html.ActionLink(item.Name, "ProductGrid", "ProductGrid", new { @Id = item.Id}, null)
                                </li>
                                }
                            </ul>
                        </nav>
                    </aside> <!-- col.// -->
                    <div class="col-md-9 col-xl-7 col-lg-7">
                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Content/images/banners/banner01.png" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/banner02.png" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/banner03.png" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->
                    </div> <!-- col.// -->
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-blue text-center text-white mb-0 p-2">Danh mục phổ biến</h6>
                            @foreach (var item in Model.ListCategory.Where(n => n.ShowOnHomePage == true).Take(3))
                            {
                            <div class="card-banner border-bottom">
                                <div class="py-3" style="width:80%">
                                    <h6 class="card-title">@item.Name</h6>
                                    <a href="@Url.Action("ProductGrid", "ProductGrid", new { Id = item.Id }, null)" class="btn btn-secondary btn-sm"> Xem ngay </a>
                                </div>
                                <img src="~/Content/images/items/@item.Avartar" height="80" class="img-bg">
                            </div>
                            }
                        </aside>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card-body.// -->
        </main> <!-- card.// -->
    </section>
    <!-- ========================= SECTION MAIN END// ========================= -->
    <!-- =============== SECTION DEAL =============== -->
    <section class="padding-bottom">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title">Sản phẩm giảm giá</h3>
                    <p></p>
                </header><!-- sect-heading -->
                <div class="timer">
                    <div> <span class="num">04</span> <small>Days</small></div>
                    <div> <span class="num">12</span> <small>Hours</small></div>
                    <div> <span class="num">58</span> <small>Min</small></div>
                    <div> <span class="num">02</span> <small>Sec</small></div>
                </div>
            </div> <!-- col.// -->
            <div class="row no-gutters items-wrap">
                @foreach (var item in Model.ListProduct.Where(n=> n.TypeId == 1).Take(3))
                {
                <div class="col-md col-6">
                    <figure class="card-product-grid card-sm">
                        <a href="@Url.Action("Detail","Product", new {Id = item.Id}, null)" class="img-wrap">
                            <img src="~/Content/images/items/@item.Avartar">
                        </a>
                        <div class="text-wrap p-3">
                            <!--<a href="#" class="title">Đang giảm giá</a>-->
                            @Html.ActionLink(item.Name, "Detail", "Product", new { Id = item.Id }, null)
                            <span class="badge badge-danger"> -20% </span>
                        </div>
                    </figure>
                </div> <!-- col.// -->
                }
            </div>
        </div>
    </section>
    <!-- =============== SECTION DEAL // END =============== -->
    <!-- =============== SECTION 1 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Cá cảnh & Thức ăn </h4>
        </header>
        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    <div class="home-category-banner bg-light-orange">
                        <h5 class="title">Danh sách sản phẩm dưới đây sẽ mang đến những sản phẩm chất lượng nhất cho cá cảnh.</h5>
                        <p>Sản phẩm cám cá, thức ăn cho cá cảnh thủy sinh chuyên dụng. Dòng sản phẩm chất lượng cao, chính hãng dành riêng cho cá cảnh. </p>
                        <a href="#" class="btn btn-outline-primary rounded-pill">Xem ngay</a>
                    </div>
                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n=> n.BrandId == 1))
                        {
                        <li class="col-6 col-lg-3 col-md-4">
                            <a href="@Url.Action("Detail", "Product", new { Id = item.Id }, null)" class="item">
                                <div class="card-body">
                                    <h5 class="title">@item.Name </h5>
                                    <img class="img-sm float-right" src="~/Content/images/items/@item.Avartar">
                                    <p class="text-muted"></p>
                                </div>
                            </a>
                        </li>
                        }
                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 1 END =============== -->
    <!-- =============== SECTION 2 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Phụ kiện thủy sinh</h4>
        </header>
        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    <div class="home-category-banner bg-light-orange">
                        <h5 class="title">Cung cấp các sản phẩm phụ kiện thủy sinh chất lượng cao, đến từ các công ty uy tín trên thị trường.</h5>
                        <p>Cam kết mang đến sản phẩm thủy sinh chất lượng cao, bền và giá rẻ. Chính sách bảo hành minh bạch dài đến 1 tháng với sản phẩm đèn thủy sinh.</p>
                        <a href="#" class="btn btn-outline-primary rounded-pill">Xem ngay</a>
                    </div>
                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Where(n => n.BrandId == 2))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("Detail", "Product", new { Id = item.Id }, null)" class="item">
                                    <div class="card-body">
                                        <h5 class="title">@item.Name</h5>
                                        <img class="img-sm float-right" src="~/Content/images/items/@item.Avartar">
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 2 END =============== -->
    <!-- =============== SECTION REQUEST =============== -->
    
    <!-- =============== SECTION REQUEST .//END =============== -->
    <!-- =============== SECTION ITEMS =============== -->
    <section class="padding-bottom-sm">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Sản phẩm đề xuất</h4>
        </header>
        <div class="row row-sm">
        @foreach (var item in Model.ListProduct.Where(n => n.TypeId == 2).Take(12))
        {
            <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                <div href="#" class="card card-sm card-product-grid">
                    <a href="@Url.Action("Detail", "Product", new { Id = item.Id }, null)" class="img-wrap"> <img src="~/Content/images/items/@item.Avartar"> </a>
                    <figcaption class="info-wrap">
                        <a href="#" class="title">@item.Name</a>
                        <div class="price mt-1">@item.PriceDiscount</div> <!-- price-wrap.// -->
                    </figcaption>
                </div>
            </div>
        }
             <!-- col.// -->
        </div> <!-- row.// -->
    </section>
    <!-- =============== SECTION ITEMS .//END =============== -->
    <!-- =============== SECTION SERVICES =============== -->
    
    <!-- =============== SECTION SERVICES .//END =============== -->
    <!-- =============== SECTION REGION =============== -->
    
    <!-- =============== SECTION REGION .//END =============== -->
    
</div>
<!-- container end.// -->
<!-- ========================= SECTION SUBSCRIBE  ========================= -->
<section class="section-subscribe padding-y-lg">
    <div class="container">
        <p class="pb-2 text-center text-white">Nhập Email của bạn nếu muốn được tư vấn từ chúng tôi.</p>
        <div class="row justify-content-md-center">
            <div class="col-lg-5 col-md-6">
                <form class="form-row">
                    <div class="col-md-8 col-7">
                        <input class="form-control border-0" placeholder="Your Email" type="email">
                    </div> <!-- col.// -->
                    <div class="col-md-4 col-5">
                        <button type="submit" class="btn btn-block btn-warning"> <i class="fa fa-envelope"></i> Subscribe </button>
                    </div> <!-- col.// -->
                </form>
                <small class="form-text text-white-50">Chúng tôi sẽ không bao giờ chia sẻ địa chỉ email của bạn với bên thứ ba. </small>
            </div> <!-- col-md-6.// -->
        </div>

    </div>
</section>
<!-- ========================= SECTION SUBSCRIBE END// ========================= -->
